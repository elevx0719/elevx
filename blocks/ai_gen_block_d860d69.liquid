{% doc %}
  @prompt
    A 3x3 icon text where I can upload svg and also add text, It should be 3x2 and only heading needed. Heading font size should be customisable
, The section should be full widht of container
, Instead of svg code allow me to upload svg icons


{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .icon-grid-container-{{ ai_gen_id }} {
    width: 100%;
    max-width: 100%;
  }

  .icon-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: {{ block.settings.gap }}px;
    width: 100%;
  }

  @media screen and (max-width: 749px) {
    .icon-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat(3, 1fr);
      gap: {{ block.settings.mobile_gap }}px;
    }
  }

  .icon-grid-item-{{ ai_gen_id }} {
    display: flex;
    flex-direction: {{ block.settings.layout }};
    align-items: center;
    justify-content: {{ block.settings.alignment }};
    text-align: {{ block.settings.text_alignment }};
    gap: {{ block.settings.icon_text_gap }}px;
    padding: {{ block.settings.item_padding }}px;
    background-color: {{ block.settings.item_background }};
    border-radius: {{ block.settings.item_border_radius }}px;
  }

  @media screen and (max-width: 749px) {
    .icon-grid-item-{{ ai_gen_id }} {
      gap: {{ block.settings.mobile_icon_text_gap }}px;
      padding: {{ block.settings.mobile_item_padding }}px;
    }
  }

  .icon-grid-icon-{{ ai_gen_id }} {
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  @media screen and (max-width: 749px) {
    .icon-grid-icon-{{ ai_gen_id }} {
      width: {{ block.settings.mobile_icon_size }}px;
      height: {{ block.settings.mobile_icon_size }}px;
    }
  }

  .icon-grid-icon-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .icon-grid-title-{{ ai_gen_id }} {
    margin: 0;
    font-size: {{ block.settings.title_size }}px;
    font-weight: {{ block.settings.title_weight }};
    color: {{ block.settings.text_color }};
  }

  @media screen and (max-width: 749px) {
    .icon-grid-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.mobile_title_size }}px;
    }
  }

  .icon-grid-placeholder-{{ ai_gen_id }} {
    background-color: #f4f4f4;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 4px;
  }

  .icon-grid-placeholder-{{ ai_gen_id }} svg {
    width: 50%;
    height: 50%;
    opacity: 0.5;
  }
{% endstyle %}

<div class="icon-grid-container-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="icon-grid-{{ ai_gen_id }}">
    {% for i in (1..6) %}
      {% assign icon_key = 'icon_' | append: i %}
      {% assign title_key = 'title_' | append: i %}<div class="icon-grid-item-{{ ai_gen_id }}">
        <div class="icon-grid-icon-{{ ai_gen_id }}">
          {% if block.settings[icon_key] != blank %}
            <img 
              src="{{ block.settings[icon_key] | img_url: 'master' }}" 
              alt="{{ block.settings[title_key] | escape }}"
              loading="lazy"
              width="{{ block.settings.icon_size }}"
              height="{{ block.settings.icon_size }}"
            >
          {% else %}
            <div class="icon-grid-placeholder-{{ ai_gen_id }}">
              {{ 'image' | placeholder_svg_tag }}
            </div>
          {% endif %}
        </div>
        {% if block.settings[title_key] != blank %}
          <h3 class="icon-grid-title-{{ ai_gen_id }}">{{ block.settings[title_key] }}</h3>
        {% endif %}
      </div>
    {% endfor %}
  </div>
</div>

