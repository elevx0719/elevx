{% doc %}
  @prompt
    collection carousel

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-collection-carousel-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    overflow: hidden;
  }

  .ai-collection-carousel__container-{{ ai_gen_id }} {
    display: flex;
    overflow-x: auto;
    scroll-snap-type: x mandatory;
    scroll-behavior: smooth;
    -webkit-overflow-scrolling: touch;
    scrollbar-width: none;
    -ms-overflow-style: none;
    gap: {{ block.settings.gap }}px;
  }

  .ai-collection-carousel__container-{{ ai_gen_id }}::-webkit-scrollbar {
    display: none;
  }

  .ai-collection-carousel__slide-{{ ai_gen_id }} {
    flex: 0 0 calc((100% - {{ block.settings.gap }}px * ({{ block.settings.slides_per_view }} - 1)) / {{ block.settings.slides_per_view }});
    scroll-snap-align: start;
    position: relative;
  }

  @media screen and (max-width: 749px) {
    .ai-collection-carousel__slide-{{ ai_gen_id }} {
      flex: 0 0 calc((100% - {{ block.settings.gap }}px * ({{ block.settings.slides_mobile }} - 1)) / {{ block.settings.slides_mobile }});
    }
  }

  .ai-collection-carousel__product-card-{{ ai_gen_id }} {
    height: 100%;
    display: flex;
    flex-direction: column;
    background-color: {{ block.settings.card_background_color }};
    border-radius: {{ block.settings.card_border_radius }}px;
    overflow: hidden;
    transition: transform 0.3s ease;
  }

  {% if block.settings.enable_hover_effect %}
  .ai-collection-carousel__product-card-{{ ai_gen_id }}:hover {
    transform: translateY(-5px);
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
  }
  {% endif %}

  .ai-collection-carousel__image-container-{{ ai_gen_id }} {
    position: relative;
    padding-bottom: 100%;
    overflow: hidden;
  }

  .ai-collection-carousel__image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-collection-carousel__image-placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f4f4f4;
  }

  .ai-collection-carousel__image-placeholder-{{ ai_gen_id }} svg {
    width: 80%;
    height: 80%;
  }

  .ai-collection-carousel__product-info-{{ ai_gen_id }} {
    padding: 15px;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
  }

  .ai-collection-carousel__product-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    font-weight: 500;
    margin: 0 0 5px;
    color: {{ block.settings.title_color }};
  }

  .ai-collection-carousel__product-price-{{ ai_gen_id }} {
    font-size: {{ block.settings.price_size }}px;
    margin: 0 0 10px;
    color: {{ block.settings.price_color }};
  }

  .ai-collection-carousel__product-vendor-{{ ai_gen_id }} {
    font-size: 14px;
    margin: 0 0 5px;
    color: {{ block.settings.vendor_color }};
    {% unless block.settings.show_vendor %}display: none;
    {% endunless %}
  }

  .ai-collection-carousel__navigation-{{ ai_gen_id }} {
    display: flex;
    justify-content: center;
    gap: 10px;
    margin-top: 20px;
    {% unless block.settings.show_navigation %}
      display: none;
    {% endunless %}
  }

  .ai-collection-carousel__nav-button-{{ ai_gen_id }} {
    background-color: {{ block.settings.nav_button_color }};
    color: {{ block.settings.nav_button_text_color }};
    border: none;
    border-radius: 50%;
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  .ai-collection-carousel__nav-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.nav_button_hover_color }};
  }

  .ai-collection-carousel__heading-{{ ai_gen_id }} {
    text-align: {{ block.settings.heading_alignment }};
    margin-bottom: 20px;
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
    {% unless block.settings.heading != blank %}
      display: none;
    {% endunless %}
  }

  .ai-collection-carousel__sale-badge-{{ ai_gen_id }} {
    position: absolute;
    top: 10px;
    left: 10px;
    background-color: {{ block.settings.sale_badge_color }};
    color: {{ block.settings.sale_badge_text_color }};
    padding: 5px 10px;
    font-size: 12px;
    border-radius: 4px;
    z-index: 1;
    {% unless block.settings.show_sale_badge %}
      display: none;
    {% endunless %}
  }
{% endstyle %}

<div class="ai-collection-carousel-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% if block.settings.heading != blank %}
    <h2 class="ai-collection-carousel__heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
  {% endif %}

  <div class="ai-collection-carousel__container-{{ ai_gen_id }}" id="carousel-container-{{ ai_gen_id }}">
    {% if block.settings.collection != blank %}
      {% assign collection = block.settings.collection %}
      {% assign product_limit = block.settings.product_limit %}
      
      {% for product in collection.products limit: product_limit %}
        <div class="ai-collection-carousel__slide-{{ ai_gen_id }}">
          <a href="{{ product.url }}" class="ai-collection-carousel__product-card-{{ ai_gen_id }}">
            <div class="ai-collection-carousel__image-container-{{ ai_gen_id }}">
              {% if product.featured_image != blank %}
                <img
                  src="{{ product.featured_image | image_url: width: 500 }}"
                  alt="{{ product.featured_image.alt | escape }}"
                  loading="lazy"
                  class="ai-collection-carousel__image-{{ ai_gen_id }}"
                  width="{{ product.featured_image.width }}"
                  height="{{ product.featured_image.height }}"
                >
              {% else %}
                <div class="ai-collection-carousel__image-placeholder-{{ ai_gen_id }}">
                  {{ 'product-1' | placeholder_svg_tag }}
                </div>
              {% endif %}
              
              {% if block.settings.show_sale_badge and product.compare_at_price > product.price %}
                <div class="ai-collection-carousel__sale-badge-{{ ai_gen_id }}">{{ block.settings.sale_badge_text }}</div>
              {% endif %}
            </div>
            
            <div class="ai-collection-carousel__product-info-{{ ai_gen_id }}">
              {% if block.settings.show_vendor %}
                <div class="ai-collection-carousel__product-vendor-{{ ai_gen_id }}">{{ product.vendor }}</div>
              {% endif %}
              
              <h3 class="ai-collection-carousel__product-title-{{ ai_gen_id }}">{{ product.title }}</h3>
              
              <div class="ai-collection-carousel__product-price-{{ ai_gen_id }}">
                {% if product.compare_at_price > product.price %}
                  <span class="ai-collection-carousel__product-price-sale-{{ ai_gen_id }}">{{ product.price | money }}</span>
                  <s class="ai-collection-carousel__product-price-compare-{{ ai_gen_id }}">{{ product.compare_at_price | money }}</s>
                {% else %}
                  <span>{{ product.price | money }}</span>
                {% endif %}
              </div>
            </div>
          </a>
        </div>
      {% endfor %}
    {% else %}
      {% for i in (1..6) %}
        <div class="ai-collection-carousel__slide-{{ ai_gen_id }}">
          <div class="ai-collection-carousel__product-card-{{ ai_gen_id }}">
            <div class="ai-collection-carousel__image-container-{{ ai_gen_id }}">
              <div class="ai-collection-carousel__image-placeholder-{{ ai_gen_id }}">
                {{ 'product-1' | placeholder_svg_tag }}
              </div>
            </div>
            
            <div class="ai-collection-carousel__product-info-{{ ai_gen_id }}">
              <div class="ai-collection-carousel__product-vendor-{{ ai_gen_id }}">Sample vendor</div>
              <h3 class="ai-collection-carousel__product-title-{{ ai_gen_id }}">Sample product</h3>
              <div class="ai-collection-carousel__product-price-{{ ai_gen_id }}">$19.99</div>
            </div>
          </div>
        </div>
      {% endfor %}
    {% endif %}
  </div>

  {% if block.settings.show_navigation %}
    <div class="ai-collection-carousel__navigation-{{ ai_gen_id }}">
      <button class="ai-collection-carousel__nav-button-{{ ai_gen_id }} prev" aria-label="Previous">
        <svg width="12" height="12" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M15 18L9 12L15 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </button>
      <button class="ai-collection-carousel__nav-button-{{ ai_gen_id }} next" aria-label="Next">
        <svg width="12" height="12" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M9 18L15 12L9 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </button>
    </div>
  {% endif %}
</div>

<script>
  (function() {
    class CollectionCarousel extends HTMLElement {
      constructor() {
        super();
        this.container = this.querySelector('#carousel-container-{{ ai_gen_id }}');
        this.slides = this.querySelectorAll('.ai-collection-carousel__slide-{{ ai_gen_id }}');
        this.prevButton = this.querySelector('.ai-collection-carousel__nav-button-{{ ai_gen_id }}.prev');
        this.nextButton = this.querySelector('.ai-collection-carousel__nav-button-{{ ai_gen_id }}.next');
        this.slideWidth = 0;
        this.slidesPerView = {{ block.settings.slides_per_view }};
        this.slidesMobile = {{ block.settings.slides_mobile }};
        this.gap = {{ block.settings.gap }};
      }

      connectedCallback() {
        if (this.slides.length <= 1 || !this.container) return;
        
        this.setupEventListeners();
        this.updateSlideWidth();
        
        // Update slide width on window resize
        window.addEventListener('resize', () => {
          this.updateSlideWidth();
        });
      }

      updateSlideWidth() {
        const isMobile = window.innerWidth <= 749;
        const visibleSlides = isMobile ? this.slidesMobile : this.slidesPerView;
        
        if (this.slides.length > 0) {
          this.slideWidth = this.slides[0].offsetWidth;
        }
      }

      setupEventListeners() {
        if (this.prevButton) {
          this.prevButton.addEventListener('click', () => {
            this.scrollPrev();
          });
        }
        
        if (this.nextButton) {
          this.nextButton.addEventListener('click', () => {
            this.scrollNext();
          });
        }
      }

      scrollPrev() {
        const scrollAmount = this.slideWidth + this.gap;
        this.container.scrollBy({
          left: -scrollAmount,
          behavior: 'smooth'
        });
      }

      scrollNext() {
        const scrollAmount = this.slideWidth + this.gap;
        this.container.scrollBy({
          left: scrollAmount,
          behavior: 'smooth'
        });
      }
    }

    customElements.define('collection-carousel-{{ ai_gen_id }}', CollectionCarousel);

    // Initialize all carousels
    const carousels = document.querySelectorAll('.ai-collection-carousel-{{ ai_gen_id }}');
    carousels.forEach(carousel => {
      new CollectionCarousel(carousel);
    });
  })();
</script>

