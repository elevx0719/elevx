leMenu(header) {\n    // Only work on mobile\n    if (window.innerWidth > 768) return;\n    \n    const content = header.nextElementSibling;\n    \n    // Close all other accordions\n    const allContents = document.querySelectorAll('.navigation-links-wrapper');\n    const allHeaders = document.querySelectorAll('.column-section-heading');\n    \n    allContents.forEach(item => {\n        if (item !== content) {\n            item.classList.remove('mobile-content-visible');\n        }\n    });\n    \n    allHeaders.forEach(item => {\n        if (item !== header) {\n            item.classList.remove('mobile-menu-active');\n        }\n    });\n    \n    // Toggle current accordion\n    content.classList.toggle('mobile-content-visible');\n    header.classList.toggle('mobile-menu-active');\n}\n\nfunction handleTrackOrderClick(event) {\n    event.preventDefault();\n    \n    // Find element with class 'account-button__icon'\n    const accountButton = document.querySelector('.account-button__icon');\n    \n    if (accountButton) {\n        // Trigger a click on the account button\n        accountButton.click();\n    } else {\n        console.warn('Element with class \"account-button__icon\" not found');\n    }\n}\n\n// Close accordion when clicking outside on mobile\ndocument.addEventListener('click', function(event) {\n    if (window.innerWidth > 768) return;\n    \n    const isMenuClick = event.target.closest('.menu-column-section');\n    \n    if (!isMenuClick) {\n        const allContents = document.querySelectorAll('.navigation-links-wrapper');\n        const allHeaders = document.querySelectorAll('.column-section-heading');\n        \n        allContents.forEach(item => {\n            item.classList.remove('mobile-content-visible');\n        });\n        \n        allHeaders.forEach(item => {\n            item.classList.remove('mobile-menu-active');\n        });\n    }\n});\n</script>",
